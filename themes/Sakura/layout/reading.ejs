<link rel="stylesheet" href="/css/reading.css">
<div class="pattern-center-blank"></div>
<div id="content" class="site-content">
  <article class="post-item post-301 page type-page status-publish has-post-thumbnail hentry">
    <header class="page-header"><h1 class="cat-title">2020年推荐书单</h1> <span class="cat-des"><p>发奋识遍天下字，立志读尽人间书。</p> </span></header>
    <% if (page.readings) { %>
    <div class="reading">
      <div class="row" id="rootRow">
        <% (page.readings||[]).forEach(function (reading, index) { %>
          <div class="col s12 m6" id="reading-<%- index %>">
            <div class="card hoverable" style="overflow: visible;">
              <div class="card-image waves-effect waves-block waves-light">
                <div class="activator itempic lazyload" style="background-image: url(<%- reading.img %>);" data-src="<%- reading.img %>">
                </div>
              </div>
              <div class="card-content">
                <div class="card-title should-ellipsis activator grey-text text-darken-4">
                  <%- reading.title %><i class="fa fa-commenting-o right"></i>
                </div>
                <p class="should-ellipsis-full">
                <%- reading.jp %></p>
                <ul class="skill-list">
                  <li class="skill">
                    <div>
                    <%- reading.status %></div>
                    <progress class="skill-1" max="100" value="<%- reading.progress %>">
                    </progress>
                  </li>
                </ul>
              </div>
              <div class="card-reveal" style="display: none; transform: translateY(0%);">
                <span class="card-title grey-text text-darken-4">
                  <%- reading.title %><i class="fa fa-close right"></i>
                </span>
                <span>
                  <%- reading.author %><br>
                </span>
                <span>
                  <!-- 放送时间: <%- reading.time %><span> -->
                    <p><%- reading.desc %></p>
                    <ul class="skill-list">
                      <li class="skill">
                        <div>
                        <%- reading.status %></div>
                        <progress class="skill-1" max="100" value="<%- reading.progress %>">
                        </progress>
                      </li>
                    </ul>
                  </span>
                </span>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <% } %>
  </article>
</div>